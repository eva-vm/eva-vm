{
	"C_Cpp.default.compileCommands": ".vscode/build/compile_commands.json",
	"mesonbuild.configureOnOpen": true,
	"editor.rulers": [
		80
	],
	"mesonbuild.configureOptions": [
		"--buildtype=debug",
		"-DSDL=enabled",
		"-DWITH_TESTS=true",
		"--layout=flat"
	],
	"C_Cpp.autocomplete": "Disabled",
	"C_Cpp.formatting": "Disabled",
	"C_Cpp.errorSquiggles": "Disabled",
	"C_Cpp.intelliSenseEngine": "Disabled",
	"clangd.arguments": [
		"--compile-commands-dir=.vscode/build"
	]
}
